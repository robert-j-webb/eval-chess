{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "checkJs": true,
      "outDir": "./bin",
      "sourceMap": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "typeRoots": [
        "node_modules/@types"
      ],
    },
    "include": [
      "**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  